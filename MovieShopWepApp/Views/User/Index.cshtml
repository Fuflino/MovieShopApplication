@using MovieShopDLL.Entities
@using MovieShopWepApp.Models
@model MovieShopWepApp.Models.UserViewModel

@{
    ViewBag.data = "Index";
}
<head>
    <link href="/Styles/UserIndexView.css" rel="stylesheet" type="text/css" />

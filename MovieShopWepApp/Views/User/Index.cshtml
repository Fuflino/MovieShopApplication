@Ajax.BeginForm("Index", "User", new AjaxOptions {InsertionMode = InsertionMode.Replace, UpdateTargetId = "movies"}))
{
    <div id="movies" class="row list-group pre-scrollable" style="min-height: 750px; max-height: 750px">


        @Html.Partial("PartialMovieView", ViewData)

    </div>
}
    

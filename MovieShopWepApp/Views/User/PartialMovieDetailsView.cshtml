<body>
    <div style="width: 50%; height: 70%">


        <div style="width: 100%; height: 100%">
            <h2 style="height: 10%">Movie Details</h2><a href="#close" title="Close" class="close">X</a>
            <div style="height: 50%; margin-top: 2%" class="row">
                <div style="height: 100%" class="col-xs-4">
                    <div style="height: 25%" class="row">
                        <div class="col-xs-5">
                            <p class="type">Title:</p>
                        </div>
                        <div class="col-xs-7">
                            <p class="value">@Model.Title</p>
                        </div>
                    </div>
                    <div style="height: 25%" class="row">
                        <div class="col-xs-5">
                            <p class="type">Genre:</p>
                        </div>
                        <div class="col-xs-7">
                            <p class="value">@Model.Genre.Name</p>
                        </div>
                    </div>
                    <div style="height: 25%" class="row">
                        <div class="col-xs-5">
                            <p class="type">Released:</p>
                        </div>
                        <div class="col-xs-7">
                            <p class="value">@Model.Year</p>
                        </div>
                    </div>
                    <div style="height: 25%" class="row">
                        <div class="col-xs-5">
                            <p class="type">Price:</p>
                        </div>
                        <div class="col-xs-7">
                            <p class="value">@Model.Price</p>
                        </div>
                    </div>
                </div>
                <div style="height: 100%" align="right" class="col-xs-8">
                    <iframe src="@Model.MovieUrl"></iframe>
                </div>
            </div>
            <div style="height: 27%; margin-top: 1%" class="row">
                <div class="col-xs-4">
                    <p class="type">Summary:</p>
                </div>
                <div align="left" class="col-xs-8">
                    <p class="value">@Model.Description</p>
                </div>
            </div>





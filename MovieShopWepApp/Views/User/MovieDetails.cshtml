@model MovieShopDLL.Entities.Movie

@{
    ViewBag.Title = "MovieDetails";
}

<div>
    <table class="table-bordered">
        <thead>Movie Details</thead>
        <tr>
            <td>Title:</td>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <td>Genre:</td>
            <td>@Model.Genre.Name</td>
        </tr>
        <tr>
            <td>Year of Release:</td>
            <td>@Model.Year</td>
        </tr>
        <tr>
            <td>Price:</td>
            <td>@Model.Price</td>
        </tr>
    </table>
</div>
<iframe width="854" height="480" src="@Model.MovieUrl" frameborder="0" allowfullscreen></iframe>


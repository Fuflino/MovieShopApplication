@using MovieShopDLL.Entities;
@model MovieShopDLL.Entities.Movie
    
<div class="item  col-xs-4 col-lg-4">
    <div class="thumbnail">

        <img class="group list-group-image" src="@Model.ImageUrl" alt="" />
        <div class="caption">
            <h4 class="group inner list-group-item-heading">
                Title: @Model.Title
            </h4>
            <p class="group inner list-group-item-text">
                Genre: @Model.Genre.Name
            </p>
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <p class="lead">
                        Pris: @Model.Price
                    </p>
                </div>
                <div class="col-xs-12 col-md-6">
                    <button onclick="location.href = '../User/MovieDetails/@Model.Id'"><img width="130" height="60" src="http://blog.performance-bmw.com/wp-content/uploads/2015/10/Details-button.png" /></button>
                </div>
            </div>
        </div>
    </div>
</div>

